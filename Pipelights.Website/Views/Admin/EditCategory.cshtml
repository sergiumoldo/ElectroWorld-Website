@model Pipelights.Database.Models.CategoryEntity

@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>

<h4>CategoryEntity</h4>
<hr />
<div style="margin-left:80px; margin-top:30px" class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:80px;">
    <a asp-action="~/Admin/CategoriesDashboard">Inapoi la categorii</a>
</div>

