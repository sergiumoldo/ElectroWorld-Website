<br />

<div>
        <h4>Produse</h4>
        <table class="table">
            <thead>
            <tr>
                <th>Produs</th>
                <th>Cantitate</th>
                <th>Pret</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var product in Model.CartProducts)
                {
                    <tr>
                        <td>@product.LampId</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price</td>
                    </tr>
                }
        </tbody>
    </table>
