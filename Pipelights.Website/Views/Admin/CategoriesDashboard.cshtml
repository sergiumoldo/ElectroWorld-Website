@model IEnumerable<Pipelights.Database.Models.CategoryEntity>

   

<style>
    footer {
        display: none;
    }
</style>

<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        <h2>Salut! Editeaza categoriile...daca vrei, fireste...</h2>
    </div>
     <br />
     <br /><br />

   @foreach(var item in Model)
{
    <form method="post" asp-action="DeleteCategory">
        <input type="hidden" name="id" value="@item.id" />
        
        <h4>ID categorie:  <b style="color:#F0B250">@item.id </b></h4>
        <h4>Nume categorie:  <b style="color:#F0B250">@item.Name</b></h4>

        <button type="submit" class="btn btn-sm btn-danger" style="font-size:20px">Sterge categorie</button>
    </form>

    <br />
    <br />
    <br />
}

</div>

<br />
<div class="col-10 container">
    <h5>Adauga categorie</h5>
<form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="id" class="control-label">Id</label>
                <input name="id" class="form-control" disabled/>
                
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Nume</label>
                <input name="Name" class="form-control" />
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza categoria" class="btn btn-primary" />
            </div>
        </form>
    <br />
    <Br />
    <a href="~/Admin/Dashboard">Inapoi</a>
</div>



    