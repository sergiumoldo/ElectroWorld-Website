<!-- Contact Start -->
<div class="container-fluid bg-light overflow-hidden px-lg-0" style="margin: 6rem 0;">
    <div class="container contact px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 contact-text py-5 wow fadeIn" data-wow-delay="0.5s">
                <div class="p-lg-5 ps-lg-0">
                    <div class="section-title text-start">
                        <h1 class="display-5 mb-4">Contacteaza-ne</h1>
                    </div>
                    <p class="mb-4">Pentru a cere o oferta pentru unul dintre serviciile noastre completeaza formularul de mai jos, iar noi o sa te contactam in cel mai scurt timp.</p>
                    <form id="contact" action="~/Home/SendMessage" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Numele tau">
                                    <label style="margin-top:-20px" id="labelname" class="redlabel">Acest camp este obligatoriu</label>
                                    <label for="name">Nume</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" name="email"  id="email" placeholder="Email">
                                    <label style="margin-top:-20px" id="labelemail" class="redlabel">Acest camp este obligatoriu</label>
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="subject" id="subject" placeholder="Subiect">
                                    <label style="margin-top:-20px" id="labelsubject" class="redlabel">Acest camp este obligatoriu</label>
                                    <label for="subject">Subiect</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Lasa un mesaj aici" name="message" id="message" style="height: 100px"></textarea>
                                    <label style="margin-top:-20px" id="labelmessage" class="redlabel">Acest camp este obligatoriu</label>
                                    <label style="margin-top:-20px" id="labelmessage1" class="redlabel">Mesajul trebuie sa contina cel putin 30 de caractere</label>

                                    <label for="message">Mesaj</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Cere oferta</button>
                            </div>
                            <h3>@ViewBag.EmailSent</h3>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 pe-lg-0" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <iframe class="position-absolute w-100 h-100" style="object-fit: cover;"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26276.061927706756!2d23.58447886018307!3d46.77121015719381!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4740a7933654513b%3A0xc07cc20e6f0c09bb!2sCluj-Napoca%2C%20Romania!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                            frameborder="0" allowfullscreen="" aria-hidden="false"
                            tabindex="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
