<script>

         //form validation

           const form = document.getElementById('contact');

    const nume = document.getElementById('name');
    const labelname = document.getElementById('labelname');

    const email = document.getElementById('email');
    const labelemail = document.getElementById('labelemail');

    const subject = document.getElementById('subject');
    const labelsubject = document.getElementById('labelsubject');

    const message = document.getElementById('message');
    const labelmessage = document.getElementById('labelmessage');
    const labelmessage1 = document.getElementById('labelmessage1');


    form.addEventListener('submit', (e) => {

        if (!checkInputsContact()) {
            e.preventDefault();
        } else {

        }
    });

    function checkInputsContact() {

        if (nume.value === '') {
            labelname.classList.add('redlabelshow');
            return (false);
        } else {
            labelname.classList.remove('redlabelshow')

        }

        if (email.value === '') {
            labelemail.classList.add('redlabelshow');
            return (false);
        } else {
            labelemail.classList.remove('redlabelshow');

        }

        if (subject.value === '') {
            labelsubject.classList.add('redlabelshow');
            return (false);
        } else {
            labelsubject.classList.remove('redlabelshow');

        }



        if (message.value === '') {
            labelmessage.classList.add('redlabelshow');
            labelmessage1.classList.remove('redlabelshow');
            return (false);
        } else if (message.value.length < 30) {
            labelmessage1.classList.add('redlabelshow');
            labelmessage.classList.remove('redlabelshow');
            return (false);
        } else {
            labelmessage.classList.remove('redlabelshow');
            labelmessage1.classList.remove('redlabelshow');
        }




        return (true);

    }



</script>